@model Category

@{

    ViewData["Title"] = Model.Name;

}

<style>
    :root {
        --orange-primary: #ff5722;
        --orange-secondary: #ff7043;
        --orange-light: #fff3e0;
        --orange-dark: #e64a19;
        --orange-subtle: rgba(255, 87, 34, 0.1);
        --text-primary: #1e1e1e;
        --text-dark: #333333;
        --white: #ffffff;
    }

    .category-hero {
        background: var(--orange-primary);
        padding: 50px 0 40px;
        position: relative;
        overflow: hidden;
        border-radius: 0 0 50px 50px;
        box-shadow: 0 10px 30px rgba(255, 87, 34, 0.2);
        text-align: center;
        color: var(--white);
    }

        .category-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="0.75"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            animation: slideGrid 20s linear infinite;
            z-index: 0;
        }

    @@keyframes slideGrid {
        0%

    {
        transform: translateX(0) translateY(0);
    }

    100% {
        transform: translateX(10px) translateY(10px);
    }

    }

    .category-hero-content {
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 50px;
        flex-wrap: wrap;
    }

        .category-hero-content img {
            height: 60px;
            object-fit: contain;
        }

    .category-hero-title {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
        color: var(--white);
        text-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

</style>

<div class="category-hero mb-5">
    <div class="container category-hero-content py-2">
        <img src="~/Img/Categories/@Model.Image" alt="Sol Resim" />
        <h1 class="category-hero-title">@Model.Name</h1>
        <img src="~/Img/Categories/@Model.Image" alt="Sağ Resim" />
    </div>
</div>

<div class="my-1 container">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var item in Model.Products)
        {
            <partial name="_ProductView" model="item" />
        }
    </div>
</div>
