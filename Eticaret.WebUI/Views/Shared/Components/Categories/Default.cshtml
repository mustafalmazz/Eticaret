@model IEnumerable<Category>

@{
    @foreach (var item in Model.Where(c => c.ParentId == 0))
    {
        <div class="dropdown">
            <a class="dropdown-toggle nav-link text-dark href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @item.Name
            </a>
            @if (Model.Where(c => c.ParentId == item.Id) is not null && Model.Where(c => c.ParentId == item.Id).Count() > 0)
            {
                <ul class="dropdown-menu">
                    @foreach (var altitem in Model.Where(c => c.ParentId == item.Id))
                    {
                        <li><a class="dropdown-item" href="/Categories/Index/@altitem.Id">@altitem.Name</a></li>
                    }
                </ul>
            }

        </div>
    }
}
