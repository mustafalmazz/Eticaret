@model IEnumerable<Category>

@{
    @foreach(var item in Model.Where(c=>c.IsActive && c.IsTopMenu && c.ParentId == 0)){
        <div class="dropdown">
            <a class="dropdown-toggle nav-link text-dark href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @item.Name
            </a>

            <ul class="dropdown-menu">
                @foreach (var altitem in Model.Where(c => c.IsActive && c.IsTopMenu && c.ParentId == item.Id))
                {
                    <li><a class="dropdown-item" href="/Categories/Index/@altitem.Id">@altitem.Name</a></li>
                }
            </ul>
        </div>
    }
}
