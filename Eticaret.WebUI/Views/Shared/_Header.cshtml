                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Search Bar -->
                    <div class="search-container mx-auto">
                        <form action="/Products" role="search">
                            <div class="position-relative">
                                <input name="q" type="search" class="form-control search-input" placeholder="Ürün Ara..." aria-label="Search">
                                <button type="submit" class="search-btn">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Desktop Navigation -->
                    <div class="nav-section d-none d-lg-flex">
                        <!-- Home -->
                        <a href="/" class="nav-item-custom">
                            <span class="icon">
                                <i class="bi bi-house-door"></i>
                            </span>
                            <span class="text">Anasayfa</span>
                        </a>

                        <!-- Categories Dropdown -->
                        <div class="dropdown-custom categories-dropdown">
                            <a href="#" class="nav-item-custom dropdown-toggle-custom" data-bs-toggle="dropdown">
                                <span class="icon">
                                    <i class="bi bi-grid-3x3-gap"></i>
                                </span>
                                <span class="text">Kategoriler</span>
                            </a>
                            <div class="dropdown-menu-custom">
                                <a href="/category/electronics" class="dropdown-item-custom">
                                    <i class="bi bi-laptop me-2"></i> Elektronik
                                </a>
                                <a href="/category/clothing" class="dropdown-item-custom">
                                    <i class="bi bi-bag me-2"></i> Giyim
                                </a>
                                <a href="/category/books" class="dropdown-item-custom">
                                    <i class="bi bi-book me-2"></i> Kitap
                                </a>
                                <a href="/category/sports" class="dropdown-item-custom">
                                    <i class="bi bi-bicycle me-2"></i> Spor
                                </a>
                            </div>
                        </div>

                        <!-- Account Dropdown -->
                        <div class="dropdown-custom">
                            <a href="#" class="nav-item-custom dropdown-toggle-custom" data-bs-toggle="dropdown">
                                <span class="icon">
                                    <i class="bi bi-person-fill"></i>
                                </span>
                                <span class="text">Hesabım</span>
                            </a>
                            <div class="dropdown-menu-custom">
                                <a href="/Account" class="dropdown-item-custom">
                                    <i class="bi bi-person me-2"></i> Kullanıcı Bilgilerim
                                </a>
                                <a href="/MyAddresses" class="dropdown-item-custom">
                                    <i class="bi bi-geo-alt me-2"></i> Kayıtlı Adreslerim
                                </a>
                                <a href="/Account/MyOrders" class="dropdown-item-custom">
                                    <i class="bi bi-bag-check me-2"></i> Siparişlerim
                                </a>
                                <a href="/Account/" class="dropdown-item-custom">
                                    <i class="bi bi-star me-2"></i> Değerlendirmelerim
                                </a>
                                <a href="/Account/SignOut" class="dropdown-item-custom text-danger">
                                    <i class="bi bi-box-arrow-right me-2"></i> Oturumu Kapat
                                </a>
                            </div>
                        </div>

                        <!-- Favorites -->
                        <a href="/Favorites" class="nav-item-custom position-relative">
                            <span class="icon">
                                <i class="bi bi-heart-fill"></i>
                            </span>
                            <span class="text">Favoriler</span>
                            <span class="cart-badge">3</span>
                        </a>

                        <!-- Cart Dropdown -->
                        <div class="dropdown-custom">
                            <a href="#" class="nav-item-custom dropdown-toggle-custom position-relative" data-bs-toggle="dropdown">
                                <span class="icon">
                                    <i class="bi bi-cart-fill"></i>
                                </span>
                                <span class="text">Sepetim</span>
                                <span class="cart-badge">2</span>
                            </a>
                            <div class="dropdown-menu-custom">
                                <a href="/product/1" class="dropdown-item-custom">
                                    <img src="https://via.placeholder.com/40x40/ff6b35/white?text=P1" alt="Product" class="me-2 rounded">
                                    Örnek Ürün 1
                                </a>
                                <a href="/product/2" class="dropdown-item-custom">
                                    <img src="https://via.placeholder.com/40x40/ff6b35/white?text=P2" alt="Product" class="me-2 rounded">
                                    Örnek Ürün 2
                                </a>
                                <div class="text-center p-3">
                                    <a href="/Cart" class="btn btn-warning rounded-pill px-4">
                                        <i class="bi bi-cart-check me-1"></i>
                                        Sepete Git
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contact -->
                        <a href="/Contact" class="nav-item-custom">
                            <span class="icon">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <span class="text">İletişim</span>
                        </a>
                    </div>

                    <!-- Mobile Navigation -->
                    <div class="mobile-menu d-lg-none">
                        <a href="/" class="mobile-nav-item">
                            <i class="bi bi-house-door me-2"></i> Anasayfa
                        </a>
                        <a href="/categories" class="mobile-nav-item">
                            <i class="bi bi-grid-3x3-gap me-2"></i> Kategoriler
                        </a>
                        <a href="/Account" class="mobile-nav-item">
                            <i class="bi bi-person-fill me-2"></i> Hesabım
