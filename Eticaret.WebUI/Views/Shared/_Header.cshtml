@using Eticaret.WebUI.ExtensionMethods
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SendeAl.com - Header Tasarım</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-orange: #ff6b35;
            --secondary-orange: #ff8c42;
            --light-orange: #fff4f0;
            --dark-orange: #e55a2b;
            --text-dark: #2c3e50;
            --text-light: #6c757d;
            --white: #ffffff;
            --border-light: #e9ecef;
        }

        .custom-header {
            background: linear-gradient(135deg, var(--white) 0%, var(--light-orange) 100%);
            border-bottom: 3px solid var(--primary-orange);
            box-shadow: 0 2px 15px rgba(255, 107, 53, 0.1);
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.8rem;
            background: linear-gradient(45deg, var(--primary-orange), var(--secondary-orange));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
                filter: brightness(1.1);
            }

        .search-container {
            position: relative;
            flex: 1;
            max-width: 500px;
            margin: 0 20px;
        }

        .search-input {
            border: 2px solid var(--border-light);
            border-radius: 25px;
            padding: 10px 50px 10px 20px;
            transition: all 0.3s ease;
            font-size: 14px;
        }

            .search-input:focus {
                border-color: var(--primary-orange);
                box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
                outline: none;
            }

        .search-btn {
            position: absolute;
            right: 5px;
            top: 50%;
            transform: translateY(-50%);
            background: var(--primary-orange);
            border: none;
            border-radius: 50%;
            width: 35px;
            height: 35px;
            color: white;
            transition: all 0.3s ease;
        }

            .search-btn:hover {
                background: var(--dark-orange);
                transform: translateY(-50%) scale(1.1);
            }

        .nav-section {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .nav-item-custom {
            position: relative;
            text-decoration: none;
            color: var(--text-dark);
            padding: 8px 12px;
            border-radius: 20px;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-width: 70px;
            text-align: center;
            white-space: nowrap;
        }

            .nav-item-custom:hover {
                background: var(--light-orange);
                color: var(--primary-orange);
                text-decoration: none;
                transform: translateY(-2px);
            }

            .nav-item-custom .icon {
                font-size: 1.2rem;
                margin-bottom: 2px;
            }

            .nav-item-custom .text {
                font-size: 0.85rem;
                font-weight: 500;
                line-height: 1;
            }

        .dropdown-custom {
            position: relative;
        }

        .dropdown-toggle-custom {
            background: none;
            border: none;
            cursor: pointer;
        }

            .dropdown-toggle-custom::after {
                margin-left: 5px;
                font-size: 0.7rem;
            }

        .dropdown-menu-custom {
            position: absolute;
            top: 100%;
            right: 0;
            background: white;
            border: 1px solid var(--border-light);
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            min-width: 200px;
            z-index: 1000;
            display: none;
            overflow: hidden;
        }

            .dropdown-menu-custom.show {
                display: block;
            }

        .dropdown-item-custom {
            padding: 12px 20px;
            color: var(--text-dark);
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.2s ease;
            border-bottom: 1px solid var(--border-light);
        }

            .dropdown-item-custom:last-child {
                border-bottom: none;
            }

            .dropdown-item-custom:hover {
                background: var(--light-orange);
                color: var(--primary-orange);
            }

        .cart-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--primary-orange);
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 0.7rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        .navbar-toggler {
            border: 2px solid var(--primary-orange);
            border-radius: 8px;
        }

            .navbar-toggler:focus {
                box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
            }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%23ff6b35' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        .mobile-nav {
            display: none;
        }

        .mobile-menu {
            background: white;
            border-top: 1px solid var(--border-light);
            padding: 15px 0;
        }

        .mobile-nav-item {
            display: block;
            padding: 10px 20px;
            color: var(--text-dark);
            text-decoration: none;
            border-bottom: 1px solid var(--border-light);
            transition: all 0.2s ease;
        }

            .mobile-nav-item:hover {
                background: var(--light-orange);
                color: var(--primary-orange);
            }

        /* YENİDEN TASARLANAN KATEGORİLER DROPDOWN */
        .categories-dropdown-redesigned {
            position: relative;
        }

        .categories-menu-redesigned {
            position: absolute;
            top: 100%;
            left: -30px;
            background: linear-gradient(135deg, var(--white) 0%, #fefefe 100%);
            border: none;
            border-radius: 16px;
            box-shadow: 0 20px 40px rgba(255, 107, 53, 0.08), 0 8px 16px rgba(0, 0, 0, 0.06), inset 0 1px 0 rgba(255, 255, 255, 0.8);
            min-width: 320px;
            max-width: 380px;
            z-index: 1001;
            display: none;
            overflow: hidden;
            margin-top: 10px;
            backdrop-filter: blur(20px);
        }

            .categories-menu-redesigned.show {
                display: block;
                animation: slideInScale 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            }

        @@keyframes slideInScale {
            0%

        {
            opacity: 0;
            transform: translateY(-20px) scale(0.95);
        }

        50% {
            opacity: 0.8;
            transform: translateY(-8px) scale(0.98);
        }

        100% {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        }

        .categories-header-redesigned {
            padding: 18px 24px;
            background: linear-gradient(135deg, var(--primary-orange) 0%, var(--secondary-orange) 100%);
            color: white;
            font-weight: 700;
            font-size: 1rem;
            text-align: center;
            position: relative;
            box-shadow: 0 2px 8px rgba(255, 107, 53, 0.2);
        }

            .categories-header-redesigned::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 2px;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            }

        .categories-grid-redesigned {
            padding: 16px;
            display: grid;
            grid-template-columns: 1fr;
            gap: 4px;
            max-height: 400px;
            overflow-y: auto;
        }

        .category-card-redesigned {
            display: flex;
            align-items: center;
            padding: 12px 16px;
            background: transparent;
            border: none;
            border-radius: 12px;
            color: var(--text-dark);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
        }

            .category-card-redesigned::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 107, 53, 0.05), transparent);
                transition: left 0.6s ease;
            }

            .category-card-redesigned:hover {
                background: linear-gradient(135deg, var(--light-orange) 0%, rgba(255, 107, 53, 0.08) 100%);
                color: var(--primary-orange);
                text-decoration: none;
                transform: translateX(8px);
                box-shadow: 0 4px 12px rgba(255, 107, 53, 0.15);
            }

                .category-card-redesigned:hover::before {
                    left: 100%;
                }

        .category-icon-redesigned {
            width: 32px;
            height: 32px;
            border-radius: 10px;
            background: linear-gradient(135deg, var(--light-orange) 0%, rgba(255, 107, 53, 0.1) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 14px;
            font-size: 0.9rem;
            color: var(--primary-orange);
            transition: all 0.3s ease;
            flex-shrink: 0;
        }

        .category-card-redesigned:hover .category-icon-redesigned {
            background: linear-gradient(135deg, var(--primary-orange) 0%, var(--secondary-orange) 100%);
            color: white;
            transform: scale(1.1) rotate(5deg);
        }

        .category-name-redesigned {
            flex-grow: 1;
            text-align: left;
            line-height: 1.3;
        }

        .category-arrow-redesigned {
            opacity: 0;
            font-size: 0.8rem;
            color: var(--primary-orange);
            transition: all 0.3s ease;
            transform: translateX(-10px);
        }

        .category-card-redesigned:hover .category-arrow-redesigned {
            opacity: 1;
            transform: translateX(0);
        }

        .categories-footer-redesigned {
            padding: 16px 24px;
            background: linear-gradient(135deg, #f8f9fa 0%, #f1f3f4 100%);
            border-top: 1px solid rgba(255, 107, 53, 0.1);
        }

        .all-categories-btn-redesigned {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            width: 100%;
            padding: 12px 20px;
            background: linear-gradient(135deg, transparent 0%, rgba(255, 107, 53, 0.02) 100%);
            border: 2px solid transparent;
            border-radius: 12px;
            color: var(--primary-orange);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 600;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
        }

            .all-categories-btn-redesigned::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(135deg, var(--primary-orange) 0%, var(--secondary-orange) 100%);
                opacity: 0;
                transition: opacity 0.3s ease;
                z-index: -1;
            }

            .all-categories-btn-redesigned:hover {
                color: white;
                text-decoration: none;
                transform: translateY(-2px);
                border-color: var(--primary-orange);
                box-shadow: 0 8px 20px rgba(255, 107, 53, 0.3);
            }

                .all-categories-btn-redesigned:hover::before {
                    opacity: 1;
                }

        .btn-icon-redesigned {
            transition: transform 0.3s ease;
        }

        .all-categories-btn-redesigned:hover .btn-icon-redesigned {
            transform: rotate(90deg);
        }

        /* Scrollbar stilizasyonu */
        .categories-grid-redesigned::-webkit-scrollbar {
            width: 6px;
        }

        .categories-grid-redesigned::-webkit-scrollbar-track {
            background: rgba(255, 107, 53, 0.05);
            border-radius: 3px;
        }

        .categories-grid-redesigned::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--primary-orange), var(--secondary-orange));
            border-radius: 3px;
        }

            .categories-grid-redesigned::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(135deg, var(--dark-orange), var(--primary-orange));
            }

        /* Responsive Design */
        @@media (max-width: 991px) {
            .nav-section

        {
            display: none;
        }

        .mobile-nav {
            display: block;
        }

        .search-container {
            margin: 10px 0;
            max-width: 100%;
        }

        .navbar-brand {
            font-size: 1.5rem;
        }

        }

        @@media (max-width: 768px) {
            .categories-menu-redesigned

        {
            left: -80px;
            min-width: 300px;
            max-width: 85vw;
        }

        .categories-grid-redesigned {
            padding: 12px;
        }

        .category-card-redesigned {
            padding: 10px 12px;
        }

        .category-icon-redesigned {
            width: 28px;
            height: 28px;
            margin-right: 12px;
        }

        }

        @@media (max-width: 576px) {
            .navbar-brand

        {
            font-size: 1.2rem;
        }

        .search-container {
            margin: 8px 0;
        }

        .nav-item-custom .text {
            font-size: 0.75rem;
        }

        .categories-menu-redesigned {
            left: -120px;
            min-width: 280px;
        }

        }

        .logo-img {
            max-height: 45px; /* header yüksekliğine göre ayarlarsın */
            height: auto;
            width: auto;
            display: block;
        }

    </style>
</head>
<body>
    <header class="custom-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Img/Logo/enyakınzoom3.png" alt="SendeAl" class="logo-img">
                </a>


                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Search Bar -->
                    <div class="search-container mx-auto">
                        <form action="/Products" role="search">
                            <div class="position-relative">
                                <input name="q" type="search" class="form-control search-input" placeholder="Ürün Ara..." aria-label="Search">
                                <button type="submit" class="search-btn">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Desktop Navigation -->
                    <div class="nav-section d-none d-lg-flex">
                        <!-- Home -->
                        <a asp-controller="Home" asp-action="Index" class="nav-item-custom">
                            <span class="icon">
                                <i class="bi bi-house-door"></i>
                            </span>
                            <span class="text">Anasayfa</span>
                        </a>

                        <!-- YENİDEN TASARLANAN KATEGORİLER DROPDOWN -->
                        <div class="dropdown-custom categories-dropdown-redesigned">
                            <a href="#" class="nav-item-custom dropdown-toggle-custom" data-bs-toggle="dropdown">
                                <span class="icon">
                                    <i class="bi bi-grid-3x3-gap"></i>
                                </span>
                                <span class="text">Kategoriler</span>
                            </a>
                            <div class="categories-menu-redesigned">
                                <div class="categories-header-redesigned">
                                    <i class="bi bi-collection me-2"></i>
                                    Ürün Kategorileri
                                </div>
                                <div class="categories-grid-redesigned">
                                    @await Component.InvokeAsync("Categories")
                                </div>
                                <div class="categories-footer-redesigned">
                                    <a href="/categories/list" class="all-categories-btn-redesigned">
                                        <i class="bi bi-grid btn-icon-redesigned"></i>
                                        <span>Tüm Kategorileri Keşfet</span>
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Account Dropdown -->
                        @if (Context.User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown-custom">
                                <a href="#" class="nav-item-custom dropdown-toggle-custom" data-bs-toggle="dropdown">
                                    <span class="icon">
                                        <i class="bi bi-person-fill"></i>
                                    </span>
                                    <span class="text">Hesabım</span>
                                </a>
                                <div class="dropdown-menu-custom">
                                    <a href="/Account" class="dropdown-item-custom">
                                        <i class="bi bi-person me-2"></i> Kullanıcı Bilgilerim
                                    </a>
                                    <a href="/MyAddresses" class="dropdown-item-custom">
                                        <i class="bi bi-geo-alt me-2"></i> Kayıtlı Adreslerim
                                    </a>
                                    <a href="/Account/MyOrders" class="dropdown-item-custom">
                                        <i class="bi bi-bag-check me-2"></i> Siparişlerim
                                    </a>
                                    @* <a href="/Account/" class="dropdown-item-custom"> *@
                                    @*     <i class="bi bi-star me-2"></i> Değerlendirmelerim *@
                                    @* </a> *@
                                    <a href="/Account/SignOut" class="dropdown-item-custom" style="color:red">
                                        <i class="bi bi-box-arrow-right me-2"></i> Oturumu Kapat
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="dropdown-custom">
                                <a href="#" class="nav-item-custom dropdown-toggle-custom" data-bs-toggle="dropdown">
                                    <span class="icon">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <span class="text">Giriş Yap</span>
                                </a>
                                <div class="dropdown-menu-custom">
                                    <a href="/Account/SignIn" class="dropdown-item-custom">
                                        <i class="bi bi-box-arrow-in-right me-2"></i> Giriş
                                    </a>
                                    <a href="/Account/SignUp" class="dropdown-item-custom">
                                        <i class="bi bi-person-plus me-2"></i> Üye Ol
                                    </a>
                                </div>
                            </div>
                        }

                        <!-- Favorites -->
                        <a href="/Favorites" class="nav-item-custom position-relative">
                            <span class="icon">
                                @{
                                    var favorites = Context.Session.GetJson<List<Product>>("GetFavorites");
                                    if (favorites is not null && favorites.Count > 0)
                                    {
                                        <i class="bi bi-heart-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-heart"></i>
                                    }
                                }
                            </span>
                            <span class="text">Favoriler</span>
                            @if (favorites is not null && favorites.Count > 0)
                            {
                                <span class="cart-badge">@favorites.Count</span>
                            }
                        </a>

                        <!-- Cart Dropdown -->
                        @{
                            var cart = Context.Session.GetJson<Eticaret.Service.Concrete.CartService>("Cart");
                        }
                        @if (cart != null && cart.CartLines.Count > 0)
                        {
                            <div class="dropdown-custom">
                                <a href="#" class="nav-item-custom dropdown-toggle-custom position-relative" data-bs-toggle="dropdown">
                                    <span class="icon">
                                        <i class="bi bi-cart-fill"></i>
                                    </span>
                                    <span class="text">Sepetim</span>
                                    <span class="cart-badge">@cart.CartLines.Count</span>
                                </a>
                                <div class="dropdown-menu-custom">
                                    @foreach (var item in cart.CartLines)
                                    {
                                        <a href="/Products/Details/@item.Product.Id" class="dropdown-item-custom">
                                            <img src="/Img/Products/@item.Product.Image" alt="@item.Product.Name" class="me-2 rounded" style="width: 40px; height: 40px; object-fit: cover;">
                                            @item.Product.Name
                                        </a>
                                    }
                                    <div class="text-center p-3">
                                        <a href="/Cart" class="btn btn-warning rounded-pill px-4">
                                            <i class="bi bi-cart-check me-1"></i>
                                            Sepete Git
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a href="/Cart" class="nav-item-custom">
                                <span class="icon">
                                    <i class="bi bi-cart"></i>
                                </span>
                                <span class="text">Sepetim</span>
                            </a>
                        }

                        <!-- Contact -->
                        <a href="/Account/Contact" class="nav-item-custom">
                            <span class="icon">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <span class="text">İletişim</span>
                        </a>
                    </div>

                    <!-- Mobile Navigation -->
                    <div class="mobile-menu d-lg-none">
                        <a asp-controller="Home" asp-action="Index" class="mobile-nav-item">
                            <i class="bi bi-house-door me-2"></i> Anasayfa
                        </a>
                        <a href="/categories" class="mobile-nav-item">
                            <i class="bi bi-grid-3x3-gap me-2"></i> Kategoriler
                        </a>
                        @if (Context.User.Identity.IsAuthenticated)
                        {
                            <a href="/Account" class="mobile-nav-item">
                                <i class="bi bi-person-fill me-2"></i> Hesabım
                            </a>
                        }
                        else
                        {
                            <a href="/Account/SignIn" class="mobile-nav-item">
                                <i class="bi bi-person me-2"></i> Giriş Yap
                            </a>
                        }
                        <a href="/Favorites" class="mobile-nav-item">
                            <i class="bi bi-heart me-2"></i>
                            Favorilerim
                            @if (favorites is not null && favorites.Count > 0)
                            {
                                <span>(@favorites.Count)</span>
                            }
                        </a>
                        <a href="/Cart" class="mobile-nav-item">
                            <i class="bi bi-cart me-2"></i>
                            Sepetim
                            @if (cart != null && cart.CartLines.Count > 0)
                            {
                                <span>(@cart.CartLines.Count)</span>
                            }
                        </a>
                        <a href="/Account/Contact" class="mobile-nav-item">
                            <i class="bi bi-envelope me-2"></i> İletişim
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Custom dropdown functionality
        document.querySelectorAll('.dropdown-toggle-custom').forEach(function(toggle) {
            toggle.addEventListener('click', function(e) {
                e.preventDefault();
                const menu = this.nextElementSibling;

                // Close all other dropdowns
                document.querySelectorAll('.dropdown-menu-custom, .categories-menu-redesigned').forEach(function(otherMenu) {
                    if (otherMenu !== menu) {
                        otherMenu.classList.remove('show');
                    }
                });

                // Toggle current dropdown
                menu.classList.toggle('show');
            });
        });

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.dropdown-custom')) {
                document.querySelectorAll('.dropdown-menu-custom, .categories-menu-redesigned').forEach(function(menu) {
                    menu.classList.remove('show');
                });
            }
        });

        // Mobile menu toggle
        document.querySelector('.navbar-toggler').addEventListener('click', function() {
            const mobileMenu = document.querySelector('.mobile-menu');
            if (mobileMenu.style.display === 'block') {
                mobileMenu.style.display = 'none';
            } else {
                mobileMenu.style.display = 'block';
