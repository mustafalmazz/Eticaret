<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Detayı - SendeAl.com</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-orange: #ff6b35;
            --secondary-orange: #ff8c42;
            --light-orange: #fff4f0;
            --dark-orange: #e55a2b;
            --text-dark: #2c3e50;
            --text-light: #6c757d;
            --white: #ffffff;
            --border-light: #e9ecef;
            --shadow-light: rgba(0, 0, 0, 0.05);
            --shadow-medium: rgba(0, 0, 0, 0.08);
            --shadow: rgba(255, 107, 53, 0.15);
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--light-bg);
            color: var(--text-dark);
        }

        /* Yeni Başlık CSS'i */
        .category-hero {
            background: var(--primary-orange);
            padding: 50px 0 40px;
            position: relative;
            overflow: hidden;
            border-radius: 0 0 50px 50px;
            box-shadow: 0 10px 30px rgba(255, 107, 53, 0.2);
            text-align: center;
            color: var(--white);
        }

            .category-hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="0.75"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
                animation: slideGrid 20s linear infinite;
                z-index: 0;
            }

        @@keyframes slideGrid {
            0% {
                transform: translateX(0) translateY(0);
            }

            100% {
                transform: translateX(10px) translateY(10px);
            }
        }

        .category-hero-content {
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 50px;
            flex-wrap: wrap;
        }

        .category-hero-title {
            font-size: 3rem;
            font-weight: 800;
            margin: 0;
            color: var(--white);
            text-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        /* Yeni Başlık CSS'i Bitişi */

        .main-product-section {
            background: linear-gradient(135deg, var(--white) 0%, var(--cream-bg) 100%);
            border-radius: 0 0 30px 30px;
            box-shadow: 0 6px 20px var(--shadow-medium);
        }

        .product-grid-layout {
            display: grid;
            grid-template-columns: 1.1fr 1fr;
            gap: 40px;
            align-items: center;
            padding-top: 40px;
        }

        .product-image-area {
            height: 420px;
            /* border: 10px #e0701a solid; */
            border-radius: 20px;
            box-shadow: 0 10px 25px var(--shadow-medium);
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            overflow: hidden;
            position: relative;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .product-image-area:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 35px lightblue;
            }

        .card-img-top {
            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            object-fit: contain;
            object-position: center;
            transition: all 0.4s ease;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

            .card-img-top:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
            }

        .product-info-area {
            display: grid;
            gap: 15px;
        }

        .product-code-tag {
            background: linear-gradient(45deg, var(--primary-orange), var(--secondary-orange));
            color: white;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            width: fit-content;
        }

        .product-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-dark);
        }

        .product-price {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-orange);
        }

        .product-description {
            color: var(--text-light);
            font-size: 0.95rem;
            line-height: 1.5;
            -webkit-line-clamp: 4;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .action-buttons-group {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .quantity-selector {
            display: flex;
            align-items: center;
            border: 1.5px solid var(--border-light);
            border-radius: 12px;
            overflow: hidden;
            width: 120px;
            background: #fff;
        }

            .quantity-selector input {
                text-align: center;
                border: none;
                width: 50%;
                font-weight: 600;
                font-size: 1rem;
                color: var(--text-dark);
                outline: none;
                background: transparent;
            }

        .qty-btn {
            width: 35px;
            height: 35px;
            border: none;
            background: var(--light-bg);
            font-size: 1.2rem;
            font-weight: bold;
            color: var(--primary-orange);
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .qty-btn:hover {
                background: var(--primary-orange);
                color: white;
            }

        .cta-button {
            background: linear-gradient(45deg, var(--primary-orange), var(--secondary-orange));
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .cta-button:hover {
                background: linear-gradient(45deg, #e0701a, #ff8c42);
                transform: translateY(-2px);
            }

        .favorite-button {
            background: white;
            color: var(--primary-orange);
            border: 1.5px solid var(--primary-orange);
        }

            .favorite-button:hover {
                background: var(--primary-orange);
                color: white;
            }

        /* --- Yeni Kart Tasarımı CSS'i Başlangıcı --- */
        .related-products-section {
            padding-top: 60px;
            padding-bottom: 60px;
            text-align: center;
        }

        .related-products-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 25px;
            max-width: 600px;
            margin: 0 auto;
        }

        .card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            background: white;
            position: relative;
        }

            .card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 40px var(--shadow);
            }

            .card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-orange), var(--secondary-orange));
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .card:hover::before {
                opacity: 1;
            }

        /* Favori Badge Tasarımı */
        .badge-fav {
            background: rgba(255, 255, 255, 0.9) !important;
            backdrop-filter: blur(10px);
            border-radius: 50%;
            width: 45px;
            height: 45px;
            display: flex !important;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            top: 15px !important;
            right: 15px !important;
            z-index: 10 !important;
            pointer-events: auto !important;
        }

            .badge-fav:hover {
                background: var(--light-orange) !important;
                border-color: var(--primary-orange);
                transform: scale(1.1);
            }

        .btn-transparent-fav {
            background: transparent !important;
            border: none !important;
            color: var(--text-light) !important;
            font-size: 1.3rem !important;
            transition: all 0.3s ease;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: none !important;
            padding: 0 !important;
            margin: 0 !important;
            outline: none !important;
        }

            .btn-transparent-fav:hover {
                color: var(--primary-orange) !important;
            }

        /* Ürün Resmi */
        .card-img-product {
            height: 280px;
            transition: all 0.4s ease;
        }

        .card:hover .card-img-product {
            transform: scale(1.05);
        }

        /* Kart Gövdesi */
        .card-body {
            padding: 25px 20px 20px;
            text-align: center;
        }

        .fw-bolder {
            font-weight: 700 !important;
            font-size: 1.1rem;
            color: var(--text-dark);
            margin-bottom: 15px;
            line-height: 1.4;
            height: 2.8em;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        /* Fiyat Tasarımı */
        .card-price-main {
            color: var(--primary-orange) !important;
            font-size: 1.4rem;
            font-weight: 800;
            display: block;
        }

        /* Kart Alt Kısmı */
        .card-footer {
            padding: 0 20px 25px !important;
            background: transparent !important;
            border: none !important;
        }

        /* Sepete Ekle Butonu */
        .btn-add-cart {
            background: linear-gradient(45deg, var(--primary-orange), var(--secondary-orange)) !important;
            border: none !important;
            color: white !important;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            width: 100%;
            position: relative;
            overflow: hidden;
        }

            .btn-add-cart::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.5s ease;
            }

            .btn-add-cart:hover::before {
                left: 100%;
            }

            .btn-add-cart:hover {
                background: linear-gradient(45deg, var(--dark-orange), var(--primary-orange)) !important;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px var(--shadow);
                color: white !important;
            }

            .btn-add-cart:active {
                transform: translateY(0);
            }

        .bi-cart-fill {
            margin-right: 8px;
            font-size: 1rem;
        }

        /* Animasyon Efekti */
        @@keyframes addedToCart {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(0.95);
            }

            100% {
                transform: scale(1);
            }
        }

        .btn-add-cart.added {
            animation: addedToCart 0.3s ease;
        }
        /* --- Yeni Kart Tasarımı CSS'i Sonu --- */

        @@media (max-width: 768px) {
            .product-grid-layout {
                grid-template-columns: 1fr;
            }

            .product-image-area {
                height: 320px;
                padding: 15px;
            }

            .action-buttons-group {
                flex-direction: column;
            }

            .cta-button, .favorite-button, .quantity-selector {
                width: 100%;
            }

            .related-products-grid {
                flex-direction: column;
                align-items: center;
            }

            .card-img-product {
                height: 200px;
            }
        }
    </style>
</head>
<body>
    @model ProductDetaİlViewModel
    @{
        ViewData["Title"] = Model.Product.Name;
    }
    <div class="category-hero mb-5">
        <div class="container category-hero-content py-2">
            <h1 class="category-hero-title">Ürün Detayları</h1>
        </div>
    </div>
    <section class="main-product-section py-5">
        <div class="container px-4 px-lg-5">
            <div class="product-grid-layout">
                <div class="product-image-area">
                    @* Buraya slider veya tek resim gelecek *@
                    @if (Model.Product.ProductImages?.Count > 0)
                    {
                        <partial name="_ProductDetailSlider" model="Model.Product.ProductImages" />
                    }
                    else
                    {
                        <img class="card-img-top" src="/Img/Products/@Model.Product.Image" alt="@Model.Product.Name">
                    }
                </div>
                <div class="product-info-area">
                    <div class="product-code-tag">@Model.Product.ProductCode</div>
                    <h1 class="product-title">@Model.Product.Name</h1>
                    <p class="product-description">@Model.Product.Description</p>
                    <div class="product-price">
                        <span>@Model.Product.Price.ToString("c")</span>
                    </div>
                    <div class="action-buttons-group">
                        <form asp-action="Add" asp-controller="Cart" style="display: flex; gap: 15px; align-items: center;">
                            <input type="hidden" value="@Model.Product.Id" name="id" />
                            <div class="quantity-selector">
                                <button type="button" class="qty-btn" id="decreaseQty">−</button>
                                <input type="text" id="inputQuantity" name="quantity" value="1" min="1" max="99" readonly>
                                <button type="button" class="qty-btn" id="increaseQty">+</button>
                            </div>
                            <button class="cta-button" type="submit">
                                <i class="bi-cart me-2"></i>
                                Sepete Ekle
                            </button>
                        </form>
                        <form asp-action="Add" asp-controller="Favorites">
                            <input type="hidden" value="@Model.Product.Id" name="ProductId" />
                            <button class="cta-button favorite-button" type="submit">
                                <i class="bi-heart me-2"></i>
                                Favorilere Ekle
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="related-products-section py-5">
        <div class="container px-4 px-lg-5">
            <h2 class="section-heading">İlişkili Ürünler</h2>
            <div class="related-products-grid">
                @foreach (var item in Model.RelatedProducts)
                {
                    <div class="col mb-4">
                        <div class="card h-100">
                            <div class="badge-fav position-absolute">
                                <form asp-action="Add" asp-controller="Favorites">
                                    <input type="hidden" value="@item.Id" name="ProductId" />
                                    <button class="btn-transparent-fav" type="submit">
                                        <i class="bi bi-heart"></i>
                                    </button>
                                </form>
                            </div>
                            <a href="/Products/Details/@item.Id">
                                <img class="card-img-top card-img-product" src="/Img/Products/@item.Image" alt="@item.Name">
                            </a>
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">@item.Name</h5>
                                    <span class="card-price-main">@item.Price.ToString("c")</span>
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <form asp-action="Add" asp-controller="Cart">
                                    <input type="hidden" value="@item.Id" name="id" />
                                    <input type="hidden" value="1" name="quantity" />
                                    <div class="text-center">
                                        <button class="btn-add-cart" type="submit">
                                            <i class="bi-cart-fill"></i>Sepete Ekle
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Ana ürün butonları
        document.querySelectorAll('.cta-button').forEach(button => {
            button.addEventListener('click', function(e) {
                if (this.innerHTML.includes('Sepete Ekle')) {
                    this.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Ekleniyor...';
                    this.disabled = true;
                    setTimeout(() => {
                        if (this.closest('form')) this.closest('form').submit();
                    }, 800);
                } else if (this.innerHTML.includes('Favorilere Ekle')) {
                    this.innerHTML = '<i class="bi bi-heart-fill me-2"></i>Eklendi!';
                    this.style.background = 'linear-gradient(45deg, #28a745, #20c997)';
                    this.style.borderColor = '#28a745';
                    this.style.color = 'white';
                    this.disabled = true;
                    setTimeout(() => {
                        if (this.closest('form')) this.closest('form').submit();
                    }, 600);
                }
            });
        });

        // İlişkili ürün butonları
        document.querySelectorAll('.btn-add-cart').forEach(button => {
            button.addEventListener('click', function(e) {
                this.classList.add('added');
                setTimeout(() => {
                    this.classList.remove('added');
                }, 300);
            });
        });

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('img').forEach(img => {
                img.setAttribute('loading', 'lazy');
            });

            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                        entry.target.style.transition = 'all 0.6s ease-out';
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.col').forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(40px)';
                observer.observe(card);
            });
        });

        // Miktar input JS
        const qtyInput = document.getElementById('inputQuantity');
        if (qtyInput) {
            document.getElementById('increaseQty').addEventListener('click', () => {
                let val = parseInt(qtyInput.value);
                if (val < 99) qtyInput.value = val + 1;
            });
            document.getElementById('decreaseQty').addEventListener('click', () => {
                let val = parseInt(qtyInput.value);
                if (val > 1) qtyInput.value = val - 1;
            });
        }
    </script>
</body>
</html>
