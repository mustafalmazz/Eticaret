<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Detayı - SendeAl.com</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-orange: #ff6b35;
            --secondary-orange: #ff8c42;
            --light-orange: #fff4f0;
            --dark-orange: #e55a2b;
            --text-dark: #2c3e50;
            --text-light: #6c757d;
            --white: #ffffff;
            --border-light: #e9ecef;
            --shadow: rgba(255, 107, 53, 0.15);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa;
        }

        /* Ana Ürün Bölümü */
        section:first-of-type {
            background: linear-gradient(135deg, var(--white) 0%, var(--light-orange) 100%);
            border-radius: 0 0 30px 30px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
        }

        /* Ürün Resmi */
        .card-img-top {
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            transition: all 0.4s ease;
            object-fit: cover;
            width: 100%;
            max-height: 500px;
        }

            .card-img-top:hover {
                transform: scale(1.03);
                box-shadow: 0 15px 50px var(--shadow);
            }

        /* Ürün Kodu */
        .small {
            background: linear-gradient(45deg, var(--primary-orange), var(--secondary-orange));
            color: white !important;
            padding: 6px 15px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.8rem !important;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-block;
        }

        /* Ürün Başlığı */
        .display-5 {
            background: linear-gradient(45deg, var(--text-dark), var(--primary-orange));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 800 !important;
            line-height: 1.2;
            margin: 20px 0;
        }

        /* Fiyat */
        .fs-5 span {
            color: var(--primary-orange) !important;
            font-weight: 700;
            font-size: 2rem !important;
            text-shadow: 0 2px 4px rgba(255, 107, 53, 0.2);
        }

        /* Açıklama */
        .lead {
            color: var(--text-light);
            line-height: 1.8;
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        /* Miktar Input */
        .form-control {
            border: 2px solid var(--border-light);
            border-radius: 15px;
            font-weight: 600;
            text-align: center;
            transition: all 0.3s ease;
            max-width: 5rem;
        }

            .form-control:focus {
                border-color: var(--primary-orange);
                box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
            }

        /* Butonlar */
        .btn-outline-dark {
            background: linear-gradient(45deg, var(--primary-orange), var(--secondary-orange)) !important;
            border: none !important;
            color: white !important;
            padding: 12px 25px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-outline-dark::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: left 0.5s ease;
            }

            .btn-outline-dark:hover::before {
                left: 100%;
            }

            .btn-outline-dark:hover {
                background: linear-gradient(45deg, var(--dark-orange), var(--primary-orange)) !important;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px var(--shadow);
                color: white !important;
            }

        /* Favori Butonu */
        form:last-of-type .btn-outline-dark {
            background: linear-gradient(45deg, #dc3545, #c82333) !important;
        }

            form:last-of-type .btn-outline-dark:hover {
                background: linear-gradient(45deg, #c82333, #bd2130) !important;
            }

        /* İlişkili Ürünler Bölümü */
        .py-5.bg-light {
            background: linear-gradient(135deg, #f8f9fa 0%, var(--light-orange) 100%) !important;
            border-radius: 30px 30px 0 0;
            margin-top: -30px;
            padding-top: 60px !important;
        }

        .fw-bolder {
            color: var(--text-dark);
            position: relative;
            margin-bottom: 40px !important;
        }

            .fw-bolder::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 0;
                width: 80px;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-orange), var(--secondary-orange));
                border-radius: 2px;
            }

        /* Form Flexbox Düzeni */
        .d-flex {
            gap: 15px;
            align-items: center;
            flex-wrap: wrap;
        }

            .d-flex form {
                display: flex;
                align-items: center;
                gap: 12px;
            }

        /* Responsive Tasarım */
        @@media (max-width: 768px) {
            .display-5

        {
            font-size: 2rem !important;
        }

        .fs-5 span {
            font-size: 1.5rem !important;
        }

        .btn-outline-dark {
            padding: 10px 20px;
            font-size: 0.9rem;
        }

        .form-control {
            max-width: 4rem;
        }

        .d-flex {
            flex-direction: column;
            align-items: stretch;
        }

            .d-flex form {
                justify-content: center;
            }

        .card-img-top {
            max-height: 300px;
        }

        }

        @@media (max-width: 576px) {
            .container

        {
            padding: 0 15px;
        }

        section:first-of-type {
            border-radius: 0 0 20px 20px;
        }

        .py-5.bg-light {
            border-radius: 20px 20px 0 0;
            margin-top: -20px;
            padding-top: 40px !important;
        }

        }

        /* Animasyonlar */
        .container {
            animation: fadeInUp 0.8s ease;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Buton Hover Efektleri */
        .btn-outline-dark:active {
            transform: translateY(0);
        }

        /* İcon Stilleri */
        .bi-cart, .bi-heart {
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <!-- Sizin Orijinal Kodunuz - Sadece CSS Tasarımı Değişti -->
    @model ProductDetaİlViewModel
    @{
        ViewData["Title"] = Model.Product.Name;
    }
    <!-- Product section-->
    <section>
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                    @if (Model.Product.ProductImages?.Count > 0)
                    {
                        <partial name="_ProductDetailSlider" model="Model.Product.ProductImages" />
                    }
                    else
                    {
                        <img class="card-img-top mb-5 mb-md-0" src="/Img/Products/@Model.Product.Image" alt="@Model.Product.Name">
                    }
                </div>
                <div class="col-md-6">
                    <div class="small mb-1">@Model.Product.ProductCode</div>
                    <h1 class="display-5 fw-bolder">@Model.Product.Name</h1>
                    <div class="fs-5 mb-5">
                        @* <span class="text-decoration-line-through">$45.00</span> *@
                        <span>@Model.Product.Price.ToString("c")</span>
                    </div>
                    <p class="lead">@Model.Product.Description</p>
                    <div class="d-flex">
                        <form asp-action="Add" asp-controller="Cart" class="d-flex">
                            <input type="hidden" value="@Model.Product.Id" name="id" />
                            <input class="form-control text-center me-3" id="inputQuantity" name="quantity" type="number" value="1" style="max-width: 5rem">
                            <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                                <i class="bi-cart me-1"></i>
                                Sepete Ekle
                            </button>
                        </form>
                        <form asp-action="Add" asp-controller="Favorites" class="d-flex ms-3">
                            <input type="hidden" value="@Model.Product.Id" name="ProductId" />
                            <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                                <i class="bi-heart me-1"></i>
                                Favorilere Ekle
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Related items section-->
    <section class="py-5 bg-light">
        <div class="container px-4 px-lg-5 mt-5">
            <h2 class="fw-bolder mb-4">İlişkili Ürünler</h2>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var item in Model.RelatedProducts)
                {
                    <partial name="_ProductView" model="item" />
                }
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Buton tıklama animasyonları
        document.querySelectorAll('.btn-outline-dark').forEach(button => {
            button.addEventListener('click', function(e) {
                // Sepete ekle butonu için
                if (this.innerHTML.includes('Sepete Ekle')) {
                    this.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Ekleniyor...';
                    this.disabled = true;

                    setTimeout(() => {
                        this.closest('form').submit();
                    }, 800);
                }
                // Favorilere ekle butonu için
                else if (this.innerHTML.includes('Favorilere Ekle')) {
                    this.innerHTML = '<i class="bi bi-heart-fill me-1"></i>Eklendi!';
                    this.style.background = 'linear-gradient(45deg, #28a745, #20c997)';
                    this.disabled = true;

                    setTimeout(() => {
                        this.closest('form').submit();
                    }, 600);
                }
            });
        });

        // Miktar input validasyonu
        document.getElementById('inputQuantity').addEventListener('change', function() {
            if (this.value < 1) this.value = 1;
            if (this.value > 99) this.value = 99;
        });
    </script>
</body>
</html>