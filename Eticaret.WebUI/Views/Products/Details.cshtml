<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Detayı - SendeAl.com</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-orange: #f47f20;
            --secondary-orange: #ff914d;
            --light-bg: #f8f9fa;
            --cream-bg: #fefcfb;
            --text-dark: #212529;
            --text-light: #6c757d;
            --white: #ffffff;
            --border-light: #e9ecef;
            --shadow-light: rgba(0, 0, 0, 0.05);
            --shadow-medium: rgba(0, 0, 0, 0.08);
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--light-bg);
            color: var(--text-dark);
        }

        .main-product-section {
            background: linear-gradient(135deg, var(--white) 0%, var(--cream-bg) 100%);
            border-radius: 0 0 30px 30px;
            box-shadow: 0 6px 20px var(--shadow-medium);
        }

        .product-grid-layout {
            display: grid;
            grid-template-columns: 1.1fr 1fr;
            gap: 40px;
            align-items: center;
            padding-top: 40px;
        }

        /* Ana Resim Alanı - Tam Oturtma */
        .product-image-area {
            height: 420px;
            border-radius: 20px;
            box-shadow: 0 10px 25px var(--shadow-medium);
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            overflow: hidden;
            position: relative;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px; /* İç boşluk ekle */
        }

            .product-image-area:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
            }

        .card-img-top {
            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            object-fit: contain; /* Kırpılmadan tam sığdır */
            object-position: center;
            transition: all 0.4s ease;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }

            .card-img-top:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 25px rgba(0,0,0,0.12);
            }

        .product-info-area {
            display: grid;
            gap: 15px;
        }

        .product-code-tag {
            background: linear-gradient(45deg, var(--primary-orange), var(--secondary-orange));
            color: white;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            width: fit-content;
        }

        .product-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-dark);
        }

        .product-price {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-orange);
        }

        .product-description {
            color: var(--text-light);
            font-size: 0.95rem;
            line-height: 1.5;
            -webkit-line-clamp: 4;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .action-buttons-group {
            display: flex;
            gap: 12px;
        }

        .quantity-input {
            width: 65px;
            height: 40px;
            border: 1.5px solid var(--border-light);
            border-radius: 10px;
            text-align: center;
            font-weight: 600;
        }

        .cta-button {
            background: linear-gradient(45deg, var(--primary-orange), var(--secondary-orange));
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .cta-button:hover {
                background: linear-gradient(45deg, #e0701a, #ff8c42);
                transform: translateY(-2px);
            }

        .favorite-button {
            background: white;
            color: var(--primary-orange);
            border: 1.5px solid var(--primary-orange);
        }

            .favorite-button:hover {
                background: var(--primary-orange);
                color: white;
            }

        /* Related products */
        .related-products-section {
            background: var(--light-bg);
            padding-top: 60px;
            border-radius: 30px 30px 0 0;
            margin-top: -20px;
        }

        .related-products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
        }

        .product-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 12px var(--shadow-light);
            overflow: hidden;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

            .product-card:hover {
                transform: translateY(-5px);
            }

        /* İlişkili Ürünler İçin de Aynı Contain Stili */
        .card-image-container {
            height: 180px;
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px; /* İç boşluk */
        }

        .product-image-small {
            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            object-fit: contain; /* İlişkili ürünler için de contain */
            object-position: center;
            transition: transform 0.3s ease;
            border-radius: 8px;
        }

        .product-card:hover .product-image-small {
            transform: scale(1.08);
        }

        .card-content {
            padding: 12px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .card-title {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text-dark);
            line-height: 1.3;
            height: 34px;
            overflow: hidden;
            margin-bottom: 6px;
        }

        .card-price {
            font-size: 1rem;
            font-weight: bold;
            color: var(--primary-orange);
            margin-bottom: 10px;
        }

        .card-buttons {
            display: flex;
            gap: 6px;
        }

        .btn-related {
            flex: 1;
            padding: 8px;
            border-radius: 8px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .btn-cart-related {
            background: var(--primary-orange);
            color: white;
            border: none;
        }

        .btn-view-related {
            background: white;
            color: var(--text-dark);
            border: 1px solid var(--border-light);
        }

        @@media (max-width: 768px) {
            .product-grid-layout

        {
            grid-template-columns: 1fr;
        }

        .product-image-area {
            height: 320px;
            padding: 15px; /* Mobilde padding küçült */
        }

        .action-buttons-group {
            flex-direction: column;
        }

        .cta-button, .favorite-button, .quantity-input {
            width: 100%;
        }

        .card-image-container {
            height: 160px;
            padding: 12px;
        }

        }

        @@media (max-width: 576px) {
            .product-image-area

        {
            height: 280px;
            padding: 12px;
        }

        .card-image-container {
            height: 140px;
            padding: 10px;
        }

        }
    </style>
</head>
<body>
    @model ProductDetaİlViewModel
    @{
        ViewData["Title"] = Model.Product.Name;
    }
    <section class="main-product-section py-5">
        <div class="container px-4 px-lg-5">
            <div class="product-grid-layout">
                <div class="product-image-area">
                    @if (Model.Product.ProductImages?.Count > 0)
                    {
                        <partial name="_ProductDetailSlider" model="Model.Product.ProductImages" />
                    }
                    else
                    {
                        <img class="card-img-top" src="/Img/Products/@Model.Product.Image" alt="@Model.Product.Name">
                    }
                </div>
                <div class="product-info-area">
                    <div class="product-code-tag">@Model.Product.ProductCode</div>
                    <h1 class="product-title">@Model.Product.Name</h1>
                    <div class="product-price">
                        <span>@Model.Product.Price.ToString("c")</span>
                    </div>
                    <p class="product-description">@Model.Product.Description</p>
                    <div class="action-buttons-group">
                        <form asp-action="Add" asp-controller="Cart" style="display: flex; gap: 15px; align-items: center;">
                            <input type="hidden" value="@Model.Product.Id" name="id" />
                            <input class="quantity-input" id="inputQuantity" name="quantity" type="number" value="1" min="1" max="99">
                            <button class="cta-button" type="submit">
                                <i class="bi-cart me-2"></i>
                                Sepete Ekle
                            </button>
                        </form>
                        <form asp-action="Add" asp-controller="Favorites">
                            <input type="hidden" value="@Model.Product.Id" name="ProductId" />
                            <button class="cta-button favorite-button" type="submit">
                                <i class="bi-heart me-2"></i>
                                Favorilere Ekle
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="related-products-section py-5">
        <div class="container px-4 px-lg-5">
            <h2 class="section-heading">İlişkili Ürünler</h2>
            <div class="related-products-grid">
                @foreach (var item in Model.RelatedProducts)
                {
                    <div class="product-card">
                        <div class="card-image-container">
                            <img src="/Img/Products/@item.Image" alt="@item.Name" class="product-image-small">
                        </div>
                        <div class="card-content">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-price">@item.Price.ToString("c")</p>
                            <div class="card-buttons">
                                <a href="@Url.Action("Details", "Product", new { id = item.Id })" class="btn-related btn-view-related">
                                    <i class="bi bi-eye"></i>
                                    <span>Görüntüle</span>
                                </a>
                                <form asp-action="Add" asp-controller="Cart" style="flex: 1;">
                                    <input type="hidden" value="@item.Id" name="id" />
                                    <input type="hidden" value="1" name="quantity" />
                                    <button type="submit" class="btn-related btn-cart-related" style="width: 100%;">
                                        <i class="bi bi-cart"></i>
                                        <span>Sepet</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Ana ürün butonları
        document.querySelectorAll('.cta-button').forEach(button => {
            button.addEventListener('click', function(e) {
                if (this.innerHTML.includes('Sepete Ekle')) {
                    this.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Ekleniyor...';
                    this.disabled = true;
                    setTimeout(() => {
                        if (this.closest('form')) this.closest('form').submit();
                    }, 800);
                }
                else if (this.innerHTML.includes('Favorilere Ekle')) {
                    this.innerHTML = '<i class="bi bi-heart-fill me-2"></i>Eklendi!';
                    this.style.background = 'linear-gradient(45deg, #28a745, #20c997)';
                    this.style.borderColor = '#28a745';
                    this.style.color = 'white';
                    this.disabled = true;
                    setTimeout(() => {
                        if (this.closest('form')) this.closest('form').submit();
                    }, 600);
                }
            });
        });
        // İlişkili ürün butonları
        document.querySelectorAll('.btn-cart-related').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                this.innerHTML = '<i class="bi bi-hourglass-split"></i><span>...</span>';
                this.disabled = true;
                setTimeout(() => {
                    if (this.closest('form')) this.closest('form').submit();
                }, 600);
            });
        });
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('img').forEach(img => {
                img.setAttribute('loading', 'lazy');
            });
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                        entry.target.style.transition = 'all 0.6s ease-out';
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);
            document.querySelectorAll('.product-card').forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(40px)';
                observer.observe(card);
            });
        });
        // Miktar input validasyonu
        const quantityInput = document.getElementById('inputQuantity');
        if (quantityInput) {
            quantityInput.addEventListener('change', function() {
                if (this.value < 1) this.value = 1;
                if (this.value > 99) this.value = 99;
            });
        }
    </script>
</body>
</html>
