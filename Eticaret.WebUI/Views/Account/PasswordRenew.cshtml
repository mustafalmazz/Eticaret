@{
    ViewData["Title"] = "Şifre Yenile";
} 

<div class="row">
    <div class="col-md-4 m-auto my-5">
        <h1>Şifremi Yenile</h1>
        <hr />
        <form asp-action="PasswordRenew">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Email" class="control-label" ></label>
                <input name="Email" class="form-control" required type="email"/>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Şifremi Yenile" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>