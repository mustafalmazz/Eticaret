@model LoginViewModel

@{
    ViewData["Title"] = "Giriş";
    Layout = "_AccountLayout";
}
<style>
    html,
    body {
        height: 100%;
    }

    .form-signin {
        max-width: 330px;
        padding: 1rem;
    }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
</style>
<main class="form-signin w-100 m-auto shadow rounded my-5">
    <form asp-action="SignIn">
        <h1 class="h3 mb-3 fw-normal">Üye Girişi</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="example@gmail.com" />
            <label for="floatingInput">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mt-1">
            <input asp-for ="Password" type="password" id="floatingPassword" class="form-control" placeholder="Şifre">
            <label for="floatingPassword">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check text-start my-3">
            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">Beni Hatırla</label>
        </div>
        <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]"/>
        <button class="btn btn-primary w-100 py-2" type="submit">Giriş Yap</button>
    </form>
    <div class="row">
        <div class="col-12 my-2"> 
            <a href="/Account/SignUp" class="btn btn-info w-100 py-2">Üye Ol</a>
        </div>
        <div class="col-12">
            <a href="/Account/PasswordRenew" class="btn btn-warning w-100 py-2">Şifremi Unuttum</a>
        </div>
    </div>
    
</main>
<hr />
<p class="alert alert-light alert-dismissible fade show">
    Sipariş oluşturmak , Kampanyalardan yararlanmak, Siparişinizi takip etmek için lütfen giriş yapın.
</p>
