@model AppUser

@{
    ViewData["Title"] = "Üye Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üye Ol</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body, html {
            height: 100%;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        .animated-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 25%, #ffa726 50%, #ffb74d 75%, #ffcc80 100%);
            z-index: -2;
        }

        .floating-icons {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }

        .floating-icon {
            position: absolute;
            color: rgba(255, 255, 255, 0.1);
            font-size: 2rem;
            animation: float 15s infinite linear;
            opacity: 0;
        }

            .floating-icon:nth-child(odd) {
                animation-direction: reverse;
            }

            .floating-icon.small {
                font-size: 1.5rem;
                animation-duration: 20s;
            }

            .floating-icon.large {
                font-size: 3rem;
                animation-duration: 12s;
            }

        @@keyframes float {
            0% {
                transform: translateY(120vh) rotate(0deg);
                opacity: 0;
            }

            5% {
                opacity: 1;
            }

            95% {
                opacity: 1;
            }

            100% {
                transform: translateY(-120px) rotate(360deg);
                opacity: 0;
            }
        }

        .container-fluid {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .signup-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(255, 107, 53, 0.3);
            padding: 3rem;
            max-width: 500px;
            width: 100%;
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
        }

            .signup-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, #17a2b8, #20c997);
            }

        .signup-header {
            text-align: center;
            margin-bottom: 2rem;
        }

            .signup-header h1 {
                color: #17a2b8;
                font-weight: 700;
                margin-bottom: 0.5rem;
                font-size: 2rem;
            }

            .signup-header p {
                color: #666;
                margin: 0;
            }

        .form-floating {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 1rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
        }

            .form-control:focus {
                border-color: #20c997;
                box-shadow: 0 0 0 0.25rem rgba(32, 201, 151, 0.25);
                background: white;
            }

        .form-floating label {
            color: #666;
            transition: all 0.3s ease;
        }

        .form-control:focus + label,
        .form-control:not(:placeholder-shown) + label {
            color: #17a2b8;
        }

        .btn-signup {
            background: linear-gradient(135deg, #17a2b8, #20c997);
            border: none;
            border-radius: 12px;
            padding: 1rem;
            font-weight: 600;
            font-size: 1.1rem;
            color: white;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-signup::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: left 0.5s ease;
            }

            .btn-signup:hover::before {
                left: 100%;
            }

            .btn-signup:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(23, 162, 184, 0.4);
            }

        .btn-return {
            background: linear-gradient(135deg, #ff6b35, #ff8c42);
            border: none;
            border-radius: 12px;
            padding: 1rem;
            font-weight: 600;
            font-size: 1.1rem;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-return:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(255, 107, 53, 0.4);
            }

        .text-danger {
            color: #dc3545 !important;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 1rem;
        }

            /* Responsive logo ayarı */
            .logo-container img {
                width: auto;
                max-height: 80px; /* Sabit yükseklik, daha büyük ekranlar için */
            }

        @@media (max-width: 576px) {
            .signup-card {
                padding: 2rem 1.5rem;
                margin: 1rem;
            }

            .signup-header h1 {
                font-size: 1.7rem;
            }
            /* Mobil ekranlar için logo boyutu */
            .logo-container img {
                max-height: 45px; /* Mobil için daha küçük bir yükseklik */
            }
        }
    </style>
</head>
<body>
    <div class="animated-bg"></div>

    <div class="floating-icons" id="floatingIconsContainer">
    </div>

    <div class="container-fluid">
        <div class="signup-card">
            <div class="logo-container">
                <img src="/Img/Logo/enyakınzoom3.png" height="80px" alt="Logo" />
            </div>
            <div class="signup-header">
                <h1>Üye Ol</h1>
                <p>Yeni bir hesap oluşturarak ayrıcalıklardan yararlanın!</p>
            </div>

            <form asp-action="SignUp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Name" class="form-control" placeholder="Adınız" required />
                    <label asp-for="Name"><i class="fas fa-user me-2"></i>Adınız</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="SurName" class="form-control" placeholder="Soyadınız" required />
                    <label asp-for="SurName"><i class="fas fa-user me-2"></i>Soyadınız</label>
                    <span asp-validation-for="SurName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder="example@gmail.com" required />
                    <label asp-for="Email"><i class="fas fa-envelope me-2"></i>Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Phone" class="form-control" placeholder="Telefon numaranız" />
                    <label asp-for="Phone"><i class="fas fa-phone me-2"></i>Telefon</label>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adınız" required />
                    <label asp-for="UserName"><i class="fas fa-user-circle me-2"></i>Kullanıcı Adı</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Şifreniz" required />
                    <label asp-for="Password"><i class="fas fa-lock me-2"></i>Şifre</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-signup py-3" type="submit">
                        <i class="fas fa-user-plus me-2"></i>Kaydol
                    </button>
                    <a asp-action="SignIn" class="btn btn-return py-3">
                        <i class="fas fa-arrow-left me-2"></i>Giriş Sayfasına Dön
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form validasyonu için basit JavaScript
        document.querySelector('form').addEventListener('submit', function (e) {
            const requiredFields = ['Name', 'SurName', 'Email', 'UserName', 'Password'];
            let allFilled = true;
            requiredFields.forEach(field => {
                const input = document.querySelector(`[name="${field}"]`);
                if (!input.value) {
                    allFilled = false;
                }
            });

            if (!allFilled) {
                e.preventDefault();
                alert('Lütfen tüm zorunlu alanları doldurun!');
            }
        });

        // Ürün ikonları (Login sayfasındaki ile aynı)
        const productIcons = [
            'fa-laptop', 'fa-mobile-alt', 'fa-headphones', 'fa-camera', 'fa-watch',
            'fa-gamepad', 'fa-tv', 'fa-tshirt', 'fa-running', 'fa-book', 'fa-home',
            'fa-car', 'fa-utensils', 'fa-coffee', 'fa-dumbbell', 'fa-bicycle',
            'fa-paint-brush', 'fa-guitar', 'fa-globe', 'fa-glasses', 'fa-couch', 'fa-ring'
        ];

        // İlk ikonları oluştur
        function createInitialIcons() {
            const container = document.getElementById('floatingIconsContainer');
            // 25 ikon oluştur ve rastgele konumlara yerleştir
            for (let i = 0; i < 25; i++) {
                const iconElement = document.createElement('i');
                const randomIcon = productIcons[Math.floor(Math.random() * productIcons.length)];
                const randomSize = Math.random();
                let sizeClass = '';
                if (randomSize < 0.3) sizeClass = 'small';
                else if (randomSize > 0.7) sizeClass = 'large';
                iconElement.className = `fas ${randomIcon} floating-icon ${sizeClass}`;
                iconElement.style.left = Math.random() * 100 + '%';
                iconElement.style.animationDelay = Math.random() * 15 + 's'; // 0-15 saniye arası rastgele başlangıç
                container.appendChild(iconElement);
            }
        }

        // Dinamik ikon ekleme
        function addFloatingIcon() {
            const container = document.getElementById('floatingIconsContainer');
            const randomIcon = productIcons[Math.floor(Math.random() * productIcons.length)];
            const iconElement = document.createElement('i');
            const randomSize = Math.random();
            let sizeClass = '';
            if (randomSize < 0.3) sizeClass = 'small';
            else if (randomSize > 0.7) sizeClass = 'large';
            iconElement.className = `fas ${randomIcon} floating-icon ${sizeClass}`;
            iconElement.style.left = Math.random() * 100 + '%';
            iconElement.style.animationDelay = '0s';
            container.appendChild(iconElement);
            // İkonu animasyon süresi kadar sonra kaldır
            const duration = sizeClass === 'small' ? 20000 : (sizeClass === 'large' ? 12000 : 15000);
            setTimeout(() => {
                if (iconElement.parentNode) {
                    iconElement.remove();
                }
            }, duration);
        }

        // Sayfa yüklendiğinde ilk ikonları oluştur
        window.addEventListener('load', function () {
            createInitialIcons();
            // Her 2 saniyede bir yeni ikon ekle
            setInterval(addFloatingIcon, 2000);
        });
    </script>
</body>
</html>